# UniCompass Backend Environment Configuration
# Copy this file to .env and configure your settings

# Application Configuration
DEBUG=false
SECRET_KEY=your-secret-key-change-in-production
HOST=0.0.0.0
PORT=5000

# Database Configuration (Optional - for SOP history persistence)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=unicompass_db
POSTGRES_USER=unicompass_user
POSTGRES_PASSWORD=secure_password_change_this

# API Keys (Optional - for enhanced features)
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
JWT_SECRET=your_jwt_secret_key_here

# Azure Document Intelligence (Optional - for PDF OCR)
DOCUMENTINTELLIGENCE_ENDPOINT=your_azure_endpoint_here
DOCUMENTINTELLIGENCE_API_KEY=your_azure_key_here